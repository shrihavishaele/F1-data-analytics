{
  "version": 2,
  "buildCommand": "npm --prefix client ci && npm --prefix client run build",
  "outputDirectory": "client/build",
  "framework": null,
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.py" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/index.py": {
      "runtime": "python3.11",
      "memory": 1024,
      "maxDuration": 15
    }
  }
}
