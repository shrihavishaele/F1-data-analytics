{
  "buildCommand": "cd client && npm ci && npm run build",
  "outputDirectory": "client/build",
  "framework": null,
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.py" }
  ],
  "functions": {
    "api/index.py": {
      "runtime": "python3.11",
      "memory": 1024,
      "maxDuration": 15
    }
  }
}
